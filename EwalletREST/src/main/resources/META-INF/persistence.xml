<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="Ewallet">

        <class>it.example.ewalletrest.model.ContoCorrente</class>
        <class>it.example.ewalletrest.model.Movimenti</class>
        <class>it.example.ewalletrest.model.TipoMovimento</class>
        <class>it.example.ewalletrest.model.Users</class>

        <properties>
            <property name="javax.persistence.jdbc.driver"
                      value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/ewallet" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQL5InnoDBDialect" />
            <property name="hibernate.default_schema" value="ewallet" />


        </properties>
    </persistence-unit>
</persistence>
